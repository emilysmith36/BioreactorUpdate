<Window x:Class="BioreactorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bioreactor UI" Height="500" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#EEE" Margin="0">
            <Button Content="Bioreactor Settings" Margin="0 0 0 20"/>
            <Button Content="Project Settings" Margin="0 0 0 5"/>
            <Button Content="History" Margin="0 20 0 0"/>
            <Button Content="Execution" Background="Red" Foreground="White" Height="40" VerticalAlignment="Bottom" Margin="0 315 0 0"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                <TextBlock Text="Project Settings" FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>

                <!-- Motor 1 Expander -->
                <Expander Header="Motor 1" IsExpanded="True" Margin="0 0 0 10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                            <TextBlock Text="Strain %" VerticalAlignment="Center" Width="50"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="at Rate" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="/s for" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <ComboBox Width="80" Margin="5 0">
                                <ComboBoxItem Content="minutes"/>
                                <ComboBoxItem Content="hours"/>
                                <ComboBoxItem Content="days"/>
                            </ComboBox>
                            <TextBlock Text="at" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <TextBlock Text="Hz" VerticalAlignment="Center" Margin="5 0"/>
                        </StackPanel>

                        <Button Content="+" Width="500" HorizontalAlignment="Left" Margin="0 5"/>
                    </StackPanel>
                </Expander>

                <!-- Motor 2 Expander -->
                <Expander Header="Motor 2" IsExpanded="False" Margin="0 0 0 10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                            <TextBlock Text="Strain %" VerticalAlignment="Center" Width="50"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="at Rate" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="/s for" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <ComboBox Width="80" Margin="5 0">
                                <ComboBoxItem Content="minutes"/>
                                <ComboBoxItem Content="hours"/>
                                <ComboBoxItem Content="days"/>
                            </ComboBox>
                            <TextBlock Text="at" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <TextBlock Text="Hz" VerticalAlignment="Center" Margin="5 0"/>
                        </StackPanel>

                        <Button Content="+" Width="500" HorizontalAlignment="Left" Margin="0 5"/>
                    </StackPanel>
                </Expander>

                <!-- Motor 3 Expander -->
                <Expander Header="Motor 3" IsExpanded="False" Margin="0 0 0 10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                            <TextBlock Text="Strain %" VerticalAlignment="Center" Width="50"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="at Rate" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="60" Margin="5 0"/>
                            <TextBlock Text="/s for" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <ComboBox Width="80" Margin="5 0">
                                <ComboBoxItem Content="minutes"/>
                                <ComboBoxItem Content="hours"/>
                                <ComboBoxItem Content="days"/>
                            </ComboBox>
                            <TextBlock Text="at" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBox Width="50" Margin="5 0"/>
                            <TextBlock Text="Hz" VerticalAlignment="Center" Margin="5 0"/>
                        </StackPanel>
                        
                        <Button Content="+" Width="500" HorizontalAlignment="Left" Margin="0 5"/>
                    </StackPanel>
                </Expander>

                <Button Content="Save" Background="Green" Foreground="White" Width="100" Height="35" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 20 0 0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>